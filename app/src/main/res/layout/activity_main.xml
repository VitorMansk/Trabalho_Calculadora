<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_valor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tp"
        android:inputType="number"
        android:hint="Valor 1"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/edt_valor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Valor 2"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor1"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/somar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Somar"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Dividir"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor2"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/mutiplicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Multiplicar"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor2"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/subtrair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="Subtrair"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor2"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>